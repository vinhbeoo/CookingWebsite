@model ProjectLibrary.ObjectBussiness.UserDetail

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>UserDetail</h4>
<hr />
<div class="row">
