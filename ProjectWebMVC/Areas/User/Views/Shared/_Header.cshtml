<style>
    /* Thêm CSS để ẩn mặc định nội dung notifications */
    .notifications {
        display: none;
        position: absolute;
        top: 100%;
        right: 0;
        width: 300px; /* Điều chỉnh chiều rộng theo ý muốn */
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        background-color: #fff;
        border: 1px solid #ddd;
        z-index: 999;
    }

    .notification-icon {
        position: relative;
    }

    span.badge.rounded-pill.bg-primary.p-2.ms-2 {
        background: blue;
    }

    /* html *:first-child {
        margin-top: 0;
        position: relative;
    } */

    .notification-item {
        display: flex;
        align-items: flex-start;
        padding: 5px;
        border-bottom: 1px solid #ddd;
        margin: 5px 0;
    }

        .notification-item i {
            margin-right: 10px;
        }

    /* Thêm CSS để tạo hiệu ứng khi hiển thị nội dung */
    .show-notifications {
        display: block;
    }

    /* Định dạng cho badge số thông báo */
    .badge-number {
        position: absolute;
        top: 0;
        right: 0;
        transform: translate(50%, -50%);
    }
    /* Điều chỉnh khoảng cách giữa các phần tử trong mỗi thông báo */
    .notification-item div {
        flex-grow: 1;
        padding-left: 5px;
    }
    /* Thiết lập định dạng cho dropdown header */
    .dropdown-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 10px;
        border-bottom: 1px solid #ddd;
    }
    /* Điều chỉnh font-size cho tiêu đề và nội dung */
    .notification-item p {
        font-size: 14px; /* Thay đổi font-size theo ý muốn */
        line-height: 12px;
    }

    .notification-item h4 {
        font-size: 16px;
        line-height: 12px;
    }

    .notification-item h4, .notification-item p {
        inline-size:
    }
    /* Thiết lập định dạng cho dropdown footer */
    .dropdown-footer {
        padding: 10px;
        text-align: center;
    }
</style>

