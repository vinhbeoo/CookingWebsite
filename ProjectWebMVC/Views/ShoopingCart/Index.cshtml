<div id="modalContainer" class="modal-container">
    <!-- Modal Content -->
    <div class="modal-content">
        <span id="modalClose" class="modal-close">&times;</span>
		<img src="~/img/logo.svg" />
        <div class="table-responsive">
            <form action="CreatePaymentUrl" id="frmCreateOrder" method="POST">
                <div class="form-group">
                    <label for="ordertype">Loại Đăng Kí </label>
                    <select name="OrderType" id="ordertype" class="form-control">
                        <option value="electric">Đăng Kí Tháng</option>
                        <option value="fashion">Đăng Kí Năm</option>
                    </select>
                </div>
                <br />
                <div class="form-group">
                    <label for="Name">Tên khách hàng</label>
                    <input class="form-control"
                           id="Name"
                           name="Name"
                           type="text"
                           value="NGUYEN VAN A">
                </div>
                <br />
                <div class="form-group">
                    <label for="Amount">Số tiền</label>
                    <input class="form-control"
                           id="Amount"
                           name="Amount"
                           type="text"
                           value="Năm:1000000 / Tháng 100000">
                </div>
                <br />
                <div class="form-group">
                    <label for="OrderDescription">Nội dung thanh toán</label>
                    <textarea class="form-control"
                              cols="20"
                              id="OrderDescription"
                              name="OrderDescription"
                              rows="2">Đăng Kí Thành Viên Website</textarea>
                </div>
                <br />
                <button type="submit" class="btn btn-primary">Thanh toán (Checkout)</button>
            </form>
        </div>
    </div>
</div>

<script>
    // Get modal elements
    const modalContainer = document.getElementById("modalContainer");
    const modalClose = document.getElementById("modalClose");
    const confirmBtn = document.getElementById("confirmBtn");

    // Function to open the modal
    function openModal() {
        modalContainer.style.display = "flex";
    }

    // Function to close the modal
    function closeModal() {
        modalContainer.style.display = "none";
    }

    // Event listeners
    window.addEventListener("load", openModal);
    modalClose.addEventListener("click", closeModal);
    confirmBtn.addEventListener("click", closeModal);
</script>